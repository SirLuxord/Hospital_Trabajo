            </HBox>
            <Button mnemonicParsing="false" onAction="#onInsertarDatosAction" text="Insertar datos de prueba" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </GridPane>
   </top>
</BorderPane>
